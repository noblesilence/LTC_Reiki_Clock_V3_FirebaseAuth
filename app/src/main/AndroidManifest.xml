<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.learnteachcenter.ltcreikiclock"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ReikiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".reiki.ReikiListActivity"
                    android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="248192f03d39946b6fea620a627f288f58828ecf"
            />
        <activity android:name=".position.PositionListActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".CrashActivity">
        </activity>
        <activity android:name=".reiki.CreateReikiActivity"
                  android:windowSoftInputMode="stateVisible">
        </activity>
        <activity android:name=".position.CreatePositionActivity"
                    android:launchMode="singleTop"
                  android:windowSoftInputMode="stateVisible">
        </activity>
    </application>

</manifest>